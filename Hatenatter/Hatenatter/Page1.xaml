<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hatenatter.Page1"
             xmlns:local="clr-namespace:Hatenatter;assembly=Hatenatter"
             >
  <StackLayout VerticalOptions="Start">
    <Button x:Name="AuthButton" Text="Auth" Clicked="AuthButton_Clicked" />

    <StackLayout x:Name="MyUserLayout" Orientation="Horizontal" HorizontalOptions="Start" BindingContext="{Binding MyUserData}">
      <Image Source="{Binding Image}" WidthRequest="50" VerticalOptions="Start" />
      <Label Text="{Binding DisplayName}" />
      <Label Text="( id:" />
      <Label Text="{Binding Id}" />
      <Label Text=") としてログインしています" />
    </StackLayout>
    <Button x:Name="PinButton" Text="PIN" Clicked="PinButton_Clicked" />
    <Label x:Name="LoginLabel" Text="Hello" Margin="15,10,10,10" />

    <ListView x:Name="MyList" ItemsSource="{Binding MyListData}" VerticalOptions="FillAndExpand" HasUnevenRows="True">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <local:MyListItemView />
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
  
</ContentPage>