<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hatenatter.Page1"
             xmlns:local="clr-namespace:Hatenatter;assembly=Hatenatter"
             >
  <StackLayout VerticalOptions="Start">
    <Label Text="Hello" Margin="15,10,10,10" />
    <Button x:Name="AuthButton" Text="Auth" Clicked="AuthButton_Clicked" />


    <ListView x:Name="mylist" ItemsSource="{Binding}" VerticalOptions="FillAndExpand" HasUnevenRows="True">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <local:MyListItemView />
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
  
</ContentPage>